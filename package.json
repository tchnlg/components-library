{
  "name": "@tchnlg/components-library",
  "repository": {
    "type": "git",
    "url": "https://github.com/zdg/components-library.git"
  },
  "version": "0.2.0",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "description": "Svelte components library for CMS",
  "svelte": "./src/index.js",
  "main": "./lib/index.js",
  "module": "./lib/index.mjs",
  "private": true,
  "scripts": {
    "build": "build-storybook",
    "fix": "npx eslint --fix --cache './src/**/*.{svelte,js,md}'",
    "format": "npx prettier --write './**/*.{svelte,js,md}'",
    "prepare": "husky install",
    "prepack": "rollup -c",
    "start": "start-storybook -p 9090"
  },
  "dependencies": {
    "carbon-icons-svelte": "^10.36.0",
    "svelte-calendar": "^2.0.4",
    "svelte-dragdroplist": "^1.1.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/preset-env": "^7.10.4",
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.4.0",
    "@storybook/addon-actions": "^6.3.7",
    "@storybook/addon-controls": "^6.3.7",
    "@storybook/addon-docs": "^6.3.8",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/addon-storysource": "^6.3.7",
    "@storybook/addon-svelte-csf": "^1.1.0",
    "@storybook/addon-viewport": "^6.3.7",
    "@storybook/cli": "^6.3.7",
    "@storybook/svelte": "^6.3.7",
    "@tailwindcss/aspect-ratio": "^0.2.1",
    "@tailwindcss/forms": "^0.3.3",
    "autoprefixer": "^10.3.4",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "eslint": "^7.32.0",
    "eslint-plugin-svelte3": "^3.2.0",
    "husky": "^7.0.0",
    "lint-staged": "^11.1.2",
    "postcss": "^8.3.6",
    "prettier": "^2.3.2",
    "prettier-plugin-svelte": "^2.4.0",
    "rollup": "^2.56.3",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-svelte": "^7.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "svelte": "^3.42.4",
    "svelte-loader": "^3.1.2",
    "svelte-preprocess": "^4.9.2",
    "tailwindcss": "^2.2.9"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "lint-staged": {
    "*.js": "eslint --cache --fix",
    "*.{svelte,js,json,md}": "prettier --write"
  },
  "prettier": {
    "svelteSortOrder": "scripts-markup-styles",
    "svelteBracketNewLine": false,
    "svelteAllowShorthand": false
  },
  "homepage": "https://github.com/zdg/components-library",
  "bugs": "https://github.com/zdg/components-library/issues",
  "keywords": [
    "svelte",
    "component library",
    "cms components"
  ],
  "files": [
    "lib",
    "src",
    "utils"
  ]
}
